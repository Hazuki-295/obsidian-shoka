@import 'colors';

body {
    --font-text-theme: Mulish, -apple-system, 'PingFang SC', 'Microsoft YaHei', sans-serif;
    /* Blockquotes */
    --blockquote-border-thickness: 4px;
    --blockquote-border-color: var(--primary-color);
    /* Bold */
    --bold-color: var(--primary-color);
    /* Inline title */
    --inline-title-color: var(--primary-color);
    --inline-title-weight: normal;
    /* Text */
    --text-highlight-hazuki: #b8860b;
    --text-highlight-bg-hazuki: #fff4d6;
}

.inline-title {
    text-align: center;
    letter-spacing: unset;
    position: relative;

    &::after {
        content: '';
        display: block;
        width: 3em;
        height: 2px;
        background-color: var(--primary-color);
        position: absolute;
        bottom: -.3em;
        left: 50%;
        transform: translateX(-50%);
    }
}

.cm-active {
    background-color: var(--color-red-a1) !important;
}

.markdown-source-view {
    /* blockquote */
    .HyperMD-quote {
        font-size: var(--font-small);
        margin-left: 4px;

        &::before {
            transform: translateX(-4px);
        }
    }

    .cm-content > .HyperMD-quote {
        margin-left: 4px !important;
    }

    /* mark */
    span.cm-highlight {
        background-color: var(--text-highlight-bg-hazuki);
        color: var(--text-highlight-hazuki);
    }
}

.markdown-reading-view {
    blockquote {
        font-size: var(--font-small);
        padding: .625rem 1.25rem;
        border-radius: .1875rem;
    }

    mark {
        background-color: var(--text-highlight-bg-hazuki);
        color: var(--text-highlight-hazuki);
    }
}
